{
  "name": "web_ssr",
  "version": "1.0.1",
  "type": "module",
  "description": "Boilerplate for a modern web stack",
  "repository": {
    "type": "git",
    "url": ""
  },
  "author": "",
  "license": "",
  "scripts": {
    "dev": "vite dev",
    "dev:server": "tsx server.ts",
    "dev:client": "yarn build:client && vite --config vite.config.ts dev",
    "build": "rimraf dist && tsc -p tsconfig.json && yarn build:client && yarn build:server && yarn copy-files",
    "build:client": "vite build --outDir dist/client --ssrManifest",
    "build:server": "vite build --ssr src/client/entry-server.tsx --outDir dist/server",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "coverage": "vitest --coverage",
    "typecheck": "tsc --noEmit",
    "serve": "cross-env NODE_ENV=production node ./dist/server",
    "serve:local": "vite serve",
    "clean": "rimraf dist/",
    "copy-files": "copyfiles \"public/**/*\" dist && copyfiles -u 2 \"dist/client/**/*\" dist && copyfiles -u 2 \"dist/client/assets/**/*\" dist/public",
    "format": "prettier --write src types"
  },
  "dependencies": {
    "@helpdice/icons": "^1.1.7",
    "@helpdice/pro": "file:packages/helpdice-pro-1.5.6.tgz",
    "@helpdice/sdk": "^0.1.9",
    "@helpdice/theme": "^1.0.5",
    "@helpdice/ui": "^2.0.7",
    "@helpdice/utils": "^0.1.3",
    "@tanstack/react-query-persist-client": "^5.87.4",
    "@types/serve-static": "^1.15.4",
    "compression": "1.8.1",
    "cross-env": "^7.0.3",
    "express": "4.18.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-helmet-async": "^2.0.5",
    "react-router-dom": "^6.18.0",
    "react-toastify": "^11.0.3",
    "sass": "^1.83.4",
    "serve-static": "^1.15.0",
    "sharp": "^0.34.3",
    "sitemap": "^8.0.0",
    "swiper": "^11.2.10",
    "tsx": "^4.20.5"
  },
  "devDependencies": {
    "@tailwindcss/vite": "^4.1.13",
    "@tanstack/react-query": "^5.37.1",
    "@testing-library/jest-dom": "^6.1.4",
    "@testing-library/react": "^14.0.0",
    "@types/compression": "^1.7.4",
    "@types/concurrently": "6.4.0",
    "@types/eslint": "8.44.6",
    "@types/express": "^4.17.20",
    "@types/node": "22.12.0",
    "@types/react": "^18.2.34",
    "@types/react-dom": "^18.2.14",
    "@types/react-helmet": "^6.1.11",
    "@types/react-router-dom": "^5.3.3",
    "@typescript-eslint/eslint-plugin": "^6.9.1",
    "@typescript-eslint/parser": "^6.9.1",
    "@vitejs/plugin-react": "^4.1.1",
    "@vitest/coverage-v8": "^3.2.4",
    "autoprefixer": "^10.4.21",
    "concurrently": "8.2.2",
    "copyfiles": "^2.4.1",
    "dotenv": "^17.2.2",
    "eslint": "^8.52.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "jsdom": "^22.1.0",
    "postcss": "8.4.31",
    "prettier": "^3.0.3",
    "rimraf": "^5.0.5",
    "tailwindcss": "^4.1.13",
    "typescript": "5.9.2",
    "vite": "4.5.0",
    "vitest": "^0.34.6"
  },
  "prettier": {
    "printWidth": 120,
    "semi": true,
    "singleQuote": false,
    "trailingComma": "all",
    "bracketSpacing": true,
    "arrowParens": "avoid"
  }
}
